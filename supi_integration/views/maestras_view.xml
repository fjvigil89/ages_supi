        </record>

        <menuitem id="menu_parameters_supi"
                  name="Parameters"
                  action="action_parameters"
                  parent="supi_integration.main_data_supi"
                  sequence="4"/>


        <!--        SALAS-->
        <record model="ir.ui.view" id="view_salas_form">
            <field name="name">salas.form</field>
            <field name="model">salas</field>
            <field name="arch" type="xml">
                <form string="Salas">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="address" required="1" placeholder="Address..."/>
                            </group>
                            <group>
                                <field name="lat" required="1"/>
                                <field name="long" required="1"/>
                            </group>

                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_salas_tree">
            <field name="name">salas.tree</field>
            <field name="model">salas</field>
