                <search string="Areas">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="action_area" model="ir.actions.act_window">
            <field name="name">Areas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">area</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_area_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new area in your system
                </p>
            </field>
        </record>

        <menuitem id="menu_area_supi"
                  name="Area"
                  action="action_area"
                  parent="supi_integration.main_data_supi"
                  sequence="3"/>


        <!--        PARAMETROS-->
        <record model="ir.ui.view" id="view_parameters_form">
            <field name="name">parameters.form</field>
            <field name="model">parameters</field>
            <field name="arch" type="xml">
                <form string="Parameters">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="detail" required="1" placeholder="Details of parameters..."/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_parameters_tree">
            <field name="name">parameters.tree</field>
            <field name="model">parameters</field>
            <field name="arch" type="xml">
