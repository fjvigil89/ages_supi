<?xml version="1.0"?>
<odoo>
    <data>
        <!--        SECTION-->
        <record model="ir.ui.view" id="view_section_form">
            <field name="name">section</field>
            <field name="model">section</field>
            <field name="arch" type="xml">
                <form string="Section">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_section_tree">
            <field name="name">section.tree</field>
            <field name="model">section</field>
            <field name="arch" type="xml">
                <tree string="Sections">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_section_search" model="ir.ui.view">
            <field name="name">section.search</field>
            <field name="model">section</field>
            <field name="arch" type="xml">
                <search string="Section">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="action_section" model="ir.actions.act_window">
            <field name="name">Sections</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">section</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_section_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new section in your system
                </p>
            </field>
        </record>

        <menuitem id="menu_section_supi"
                  name="Sections"
                  action="action_section"
                  parent="supi_integration.main_data_supi"
                  sequence="2"/>

        <!--        AREA-->
        <record model="ir.ui.view" id="view_area_form">
            <field name="name">area.form</field>
            <field name="model">area</field>
            <field name="arch" type="xml">
