<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="inscription_form_view" model="ir.ui.view">
            <field name="name">inscription.form.view</field>
            <field name="model">inscription</field>
            <field name="arch" type="xml">
                <form string="Inscription">
                    <header>
                        <button name="button_draft" states="rejected" string="Set to Draft" type="object"
                                class="oe_highlight"/>
                        <button name="button_approved" states="draft" string="Approved" type="object"
                                class="oe_highlight"/>
                        <button name="button_rejected" states="draft,approved" string="Rejected" type="object"
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,approved,rejected"/>
                    </header>
                    <sheet>
                        <group>
                            <div class="oe_title">
                                <label for="name" class="oe_edit_only"/>
                                <h1>
                                    <field name="name" required="1" attrs="{'readonly':[('state','in',['approved','rejected'])]}"/>
                                </h1>
                            </div>
                        </group>
                        <group col="4">
                            <field name="email" required="1"
                                   attrs="{'readonly':[('state','in',['approved','rejected'])]}"/>
                            <field name="phone" required="1" attrs="{'readonly':[('state','in',['approved','rejected'])]}"/>
                            <field name="address" required="1" attrs="{'readonly':[('state','in',['approved','rejected'])]}"/>
                            <field name="password" type="password" password="True" required="1" attrs="{'readonly':[('state','in',['approved','rejected'])]}"/>
                            <field name="user_id" invisible="1"/>
                            <field name="employee_id" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="inscription_tree_view" model="ir.ui.view">
            <field name="name">inscription.tree.view</field>
            <field name="model">inscription</field>
            <field name="arch" type="xml">
                <tree string="Inscription">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                </tree>
            </field>
        </record>

        <record id="act_inscription_from" model="ir.actions.act_window">
            <field name="res_model">inscription</field>
            <field name="name">Inscription</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create an Inscription
                </p>
            </field>
        </record>

        <menuitem id="menu_inscription"
                  parent="inscription_management"
                  name="Inscriptions Request"
                  action="act_inscription_from"/>
    </data>
</odoo>